@model IEnumerable<BaoHiem_Sona.Models.SinhVien>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Provide_BHYT</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" integrity="sha384-b6lVK+yci+bfDmaY1u0zE8YYJt0TZxLEAFyYSLHId4xoVvsrQu3INevFKo+Xir8e" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h2>Cấp mã thẻ bảo hiểm y tế</h2>
        <form method="post" action="~/Admin/DanhSachPhat/Provide_BHYT">
            <div class="row">
                <div class="col-md-4">
                    <div class="input-group">
                        <label>Ngày hiệu lực bảo hiểm :</label>
                        <input type="date" class="form-control" name="ThoiGianBatDau" />
                        <p class="text-danger">(*)Thời gian ở đây sẽ được áp dụng cho tất cả các mã BHYT phía dưới </p>
                    </div>

                </div>
                <div class="col-md-2" style="padding: 20px">

                </div>
                <div class="col-md-3" style="padding: 20px">

                </div>
                <div class="col-md-3 text-right" style="padding: 20px">
                    <button class="btn btn-success"> <i class="bi bi-floppy"></i> Lưu</button>
                </div>
            </div>
            <div class="table-responsive">
                <table id="myTable" class="table table-bordered text-center table-hover w-100">
                    <thead>
                        <tr class="bg-warning">
                            <th class="text-center">STT</th>
                            <th class="text-center">Mã SV</th>
                            <th class="text-center">Họ & tên lót</th>
                            <th class="text-center">Tên</th>
                            <th class="text-center">Ngày sinh</th>
                            <th class="text-center">Lớp</th>
                            <th class="text-center">Tình trạng</th>
                            <th class="text-center">Mã BHYT</th>


                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 0;}
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@(i + 1)</td>
                                <td>@item.MaSV</td>
                                <td>@item.HoSV</td>
                                <td>@item.TenSV</td>
                                <td>@Convert.ToDateTime(item.NgaySinh).ToString("dd/MM/yyyy")</td>
                                <td>@item.Lop.TenLop</td>
                                <td>@item.TinhTrang.TenTinhTrang</td>
                                <td class="text-center">

                                    <input type="text" class="form-control" value="" name="BHYTCode[@i]" />

                                    <input type="hidden" value="@item.ID" name="studentID[@i]" />
                                </td>

                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/site/Datatables.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
</body>
</html>
